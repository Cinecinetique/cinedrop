packages: 
  rpm:
    rpmforge: http://packages.sw.be/rpmforge-release/rpmforge-release-0.5.2-2.el6.rf.x86_64.rpm
files:
  “/etc/yum.repos.d/centos.repo” :
    mode: “000722”
    owner: root
    group: root
    content: |
      [centos]
      name=CentOS-6 – Base
      baseurl=http://mirror.centos.org/centos/6/os/x86_64/
      gpgcheck=1
      gpgkey=http://mirror.centos.org/centos/RPM-GPG-KEY-CentOS-6
      enabled=1
      priority=20
      protect=1
commands:
  import_rpmforge_gpg_key:
      command: "rpm --import http://apt.sw.be/RPM-GPG-KEY.dag.txt"
  enable_epel_repo:
      command: "yum-config-manager --enable epel"
  enable_rpmforge_repo:
      command: "yum-config-manager --enable 'rpmforge'"
  enable_rpmforge_extra_repo:
      command: "yum-config-manager --enable 'rpmforge-extra'"
  set_priority_epel_repo:
      command: "yum-config-manager  --setopt='priority=20' --save"
  set_priority_rpmforge_repo:
      command: "yum-config-manager --setopt='priority=20' --save"
  set_priority_rpmforge_extra_repo:
      command: "yum-config-manager --setopt='priority=20' --save"