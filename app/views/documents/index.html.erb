<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<% if session[:user_id] %>
<p id="session"> Logged In (<%= link_to 'Logout', logout_path, method: :delete %>)</p>
<% end %>

<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Project</th>
      <th>Thumbnail</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.data_content_type %></td>
        <td><%= document.project.name %></td>
        <td><%= image_tag document.data.url(:thumb) %></td>
        <td data-no-turbolink><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

