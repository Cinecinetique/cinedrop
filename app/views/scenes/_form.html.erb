<%= form_for(@scene) do |f| %>
  <% if @scene.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scene.errors.count, "error") %> prohibited this scene from being saved:</h2>

      <ul>
      <% @scene.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="span1 field">
    <%= f.label :position %>
    <div class="input-prepend"><span class="add-on"><i class="icon-list"></i></span><%= f.number_field :position, :class => "span1" %></div>
  </div>
  <div class="span5 field">
    <%= f.label :slugline %>
    <%= f.text_field :slugline, :class => "span5" %>
  </div>
</div>
<div class="row">
  <div class="span3 field">
    <%= f.label "VIDEO" %>
    <%= f.text_area :script_video, size: "60x12", :class => "span3" %>
  </div>
  <div class="span3 field">
    <%= f.label "AUDIO" %>
    <%= f.text_area :script_audio, size: "60x12", :class => "span3" %>
  </div>
</div>

  <div class="actions">
    <%= f.hidden_field :project_id, :value => "#{session[:current_project]}" %>
    <%= f.submit %>
  </div>
<% end %>
