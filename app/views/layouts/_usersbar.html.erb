<table class="table well table-striped">
<tr>
	<td class="nav-header">Team Roster</td><td></td>
</tr>
<% Worker.where("project_id = #{session[:current_project]}").each do |w| %>
<tr>
	<td><%=w.user.name %> (<%= w.department %>)</td><td><a class="btn btn-link" href="<%= user_path(w.user.id) %>" title="Show User info; See tasks list"><i class="icon-hand-right"></i></a></td>
</tr>
<% end %>
<tr><td><%= link_to 'Manage members', users_path, :class =>"btn btn-link" %></td><td><%= link_to 'Add member', new_user_path, :class =>"btn btn-link" %></td></tr>
</table>

<div ng-controller="FileOutboxCtrl">
	<table id="files-to-send" class="table well table-striped">
	<tr><td span="2" class="nav-header">Files Outbox</td><td span="2"></td></tr>
	<tr >
	<td id="file_outbox_dropzone" droppable drop="handleDrop(item)">
	</td>
	</tr>
	</table>
</div>
