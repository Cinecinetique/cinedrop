<h1>Listing users</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Department</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.workers.where("project_id = #{session[:current_project]}").first.role %></td>
        <td><%= user.workers.where("project_id = #{session[:current_project]}").first.department %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-mini btn-default"%></td>
        <td><%= link_to 'Edit', edit_user_path(user),  :class => "btn btn-mini btn-primary" %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

